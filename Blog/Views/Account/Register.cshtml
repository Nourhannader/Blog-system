@model RegisterViewModel
@{
	ViewData["Title"] = "Register";
	Layout = "_RegisterLogInLayout";
}

<div class="container py-3">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm" style="background-color: #454545; border-radius: 10px;">
                <div class="card-body p-3">
                    <h1 class="text-center mb-4" style="color: #ebebeb;">Create Your Account</h1>

                    <form asp-action="Register" asp-controller="Account" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <!-- Left Column - Personal Info -->
                            <div class="col-8 m-auto">

                                <div class="form-group mb-3">
                                    <label asp-for="UserName" style="color:#888;"></label>
                                    <input asp-for="UserName" class="form-control" style="border: 1px solid #dee2e6;" />
                                    <span asp-validation-for="UserName" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Email" style="color:#888;"></label>
                                    <input asp-for="Email" class="form-control" style="border: 1px solid #dee2e6;" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Password" style="color:#888;"></label>
                                    <input asp-for="Password" class="form-control" style="border: 1px solid #dee2e6;" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="ConfirmPassword" style="color:#888;"></label>
                                    <input asp-for="ConfirmPassword" class="form-control" style="border: 1px solid #dee2e6;" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ImagePorfile" style="color:#888;"></label>
                                    <input asp-for="ImagePorfile" type="file" class="form-control" style="border: 1px solid #dee2e6;" />
                                </div>
                           
                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary px-4 py-2" style="border: none;">
                                Register
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p style="color:#888;">Already have an account? <a asp-action="LogIn" asp-controller="Account" class="text-primary">Login here</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>