@model LogInViewModel
@{
    ViewData["Title"] = "LogIn";
    Layout = "_RegisterLogInLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm" style="background-color: #454545; border-radius: 10px;">
                <div class="card-body p-3">
                    <h1 class="text-center mb-4" style="color: #ebebeb;">LogIn</h1>

                    <form asp-action="LogIn" asp-controller="Account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row">
                            <!-- Left Column - Personal Info -->
                            <div class="col-8 m-auto">

                                <div class="form-group mb-3">
                                    <label asp-for="Email" style="color:#888;"></label>
                                    <input asp-for="Email" class="form-control" style="border: 1px solid #dee2e6;" />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Password" style="color:#888;"></label>
                                    <input asp-for="Password" class="form-control" style="border: 1px solid #dee2e6;" />
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>

                            </div>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="btn btn-primary px-4 py-2" style="border: none;">
                                LogIn
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p style="color:#888;">Don't have an account?<a asp-action="Register" asp-controller="Account" class="text-primary">Create Account.</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>